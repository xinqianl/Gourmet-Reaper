
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".com.edu.cmu.gourmetreaper.ui.FBFragment"
    android:id="@+id/fragment">

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/from_gallery"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/text_details"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/profilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:visibility="invisible"></com.facebook.login.widget.ProfilePictureView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Share your favorite"
        android:id="@+id/inputLabel"
        android:textSize="15dp"
        android:textColor="#FFAB08"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/profilePicture"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_below="@+id/inputLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="500dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/select_button"
        android:src="@drawable/camara"
        android:layout_below="@+id/input"
        android:layout_alignRight="@+id/profilePicture"
        android:layout_alignEnd="@+id/profilePicture" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/from_gallery"
        android:src="@drawable/pop"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Post"
        android:id="@+id/post_button"
        android:textColor="#FFFFFF"
        android:background="#FFBF00"
        android:layout_below="@+id/input"
        android:layout_alignRight="@+id/input"
        android:layout_alignEnd="@+id/input"
        android:layout_marginTop="18dp" />


</RelativeLayout>