<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.cmu.gourmetreaper.ui.OrderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/orderTitle"
        android:id="@+id/orderTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#FFAB08" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/totalPriceTitle"
        android:textSize="15dp"
        android:textColor="#FFAB08"
        android:layout_alignTop="@+id/checkOrderButton"
        android:layout_alignRight="@+id/orderTitle"
        android:layout_alignEnd="@+id/orderTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Check"
        android:id="@+id/checkOrderButton"
        android:background="#FFBF00"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="70dp"
        android:onClick="checkout"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myListView"
        android:layout_below="@+id/orderTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/totalPriceTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/noOrderTitle"
        android:layout_below="@+id/orderTitle"
        android:layout_alignLeft="@+id/orderTitle"
        android:layout_alignStart="@+id/orderTitle"
        android:layout_marginTop="39dp" />


</RelativeLayout>
